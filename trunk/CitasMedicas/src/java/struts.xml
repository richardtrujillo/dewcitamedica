<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <include file="struts-default.xml"/>
    <constant name="struts.objectFactory" value="org.apache.struts2.spring.StrutsSpringObjectFactory" />
    <constant name="struts.devMode" value="true" />

    <package name="citaMedica" namespace="/" extends="struts-default">
        <interceptors>
            <interceptor name="autenticacion" class="autenticacionInterceptor" />
            <interceptor-stack name="usuarioLogeado">
                <interceptor-ref name="basicStack" />
                <interceptor-ref name="autenticacion" />
            </interceptor-stack>
        </interceptors>
        <!--<global-results>
            <result name="login">/login.jsp</result>
        </global-results>
        <global-results>
            <result name="logout">/logout.jsp</result>
        </global-results>
        <global-results>
            <result name="error">/errorPage.jsp</result>
        </global-results>-->
    </package>

    <package name="logeo" namespace="/logeo" extends="citaMedica">
        <action name="login" class="loginAction"></action>
    </package>

    <package name="reserva" namespace="/reserva" extends="citaMedica">
        <action name="buscarHorario" class="buscarHorarioAction">
            <interceptor-ref name="usuarioLogeado" />
        </action>
        <action name="cargarMedicos" class="cargarMedicosAction">
            <interceptor-ref name="usuarioLogeado" />
        </action>
        <action name="iniciarReserva" class="iniciarReservaAction">
            <interceptor-ref name="usuarioLogeado" />
        </action>
        <action name="reservarCita" class="reservarCitaAction">
            <interceptor-ref name="usuarioLogeado" />
        </action>
    </package>
</struts>